<% include partials/header%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align:center; font-size:38px;">Create A New Medicine</h1>
        </div> 
        <div style="margin:10px auto; width:35%;">
   
            <form action="/index/m" method="POST">
                 <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Medicine ID" name="medicineID">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Medicine Name" name="medicineName">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Manufacture Date" name="manufactureDate">
                </div> 
                <div class="form-group"> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Expiry Date" name="expiryDate">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Manufacturer" name="manufacturer">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Owner" name="owner">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
                
            </form>
            <div class="form-group">
                <a  href="/index">Go Back</a>
            </div>
            
        </div>
    </div>
</div>
<% include partials/footer%>
