<% include partials/header%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align:center; font-size:38px;">Create A New Box</h1>
        </div> 
        <div style="margin:10px auto; width:35%;">
.
            <form action="/index/b" method="POST">
                 <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Shipment ID" name="shipmentID">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Tracking Code" name="trackingCode">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Address Of Origin" name="originAddress">
                </div> 
                
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Address Of Destination" name="destinationAddress">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Current Address" name="currentAddress">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Status" name="status">
                </div>  
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Parent Contract" name="parentContract">
                </div>  
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Previous Box ID" name="previousBoxID">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Medicines Contained" name="medicinesContained[]">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Quantity Provided" name="quantityProvided[]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
                
            </form>
            <div class="form-group">
                <a  href="/index">Go Back</a>
            </div>
            
        </div>
    </div>
</div>
<% include partials/footer%>
