<% include partials/header%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align:center; font-size:38px;">Update Contract:<%=contract.contractID%></h1>
        </div> 
        <div style="margin:10px auto; width:35%;">

            <form action="/contracts/<%=contract._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Contract ID" name="contractID">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Medicines IDs" name="medicinesID[]">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Quantity of Medicines" name="quantity[]">
                </div> 
                
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Status" name="status">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Completion Status" name="completionStatus">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Price" name="price">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Seller" name="seller">
                </div> 
                <div class="form-group">
                    <input class ="form-control" type="text" placeholder="Buyer" name="buyer">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
                
            </form>
            <div class="form-group">
                <a  href="/index">Go Back</a>
            </div>
            
        </div>
    </div>
</div>
<% include partials/footer%>
